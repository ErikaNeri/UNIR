            for ($i = 1; $i <= 6; $i++) {
                $codigo .= "\n".$myArrayCod[numeroAleatorio(0, 35)];
            }
            return $codigo;
        }
        function numeroAleatorio ($ninicial, $nfinal) {
            $numero = rand($ninicial, $nfinal);
            return $numero;
        }
